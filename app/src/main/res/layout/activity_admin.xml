<?xml version="1.0" encoding="utf-8"?>



<android.support.design.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffaa80"
    android:scrollbars="vertical"
    android:layout_gravity="center"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/hotel_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/chairs_count_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="55dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">


        <Button
            android:id="@+id/hotel_name_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_panel_vertical_margin"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:text="HOTEL NAME"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chairs_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_panel_vertical_margin"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:text="CHAIRS"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_panel_vertical_margin"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:text="MENU"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sales_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_panel_vertical_margin"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:focusable="true"
            android:text="SALES"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
